{
  "compilerOptions": {
    "removeComments": true,
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./dist/split/",
    "noImplicitAny": true,
    "noEmitOnError": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "types/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}
