{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist/split/",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES5",
    "typeRoots": [
      "types"
    ],
    // Required for WebPack since typeRoots does not look to be supported, works fine without it when using tsc..
    "types": [
      "react-tether",
      "webpack-env"
    ]
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.*"
  ]
}
