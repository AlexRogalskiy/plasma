{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "target": "ES5",
    "typeRoots": [
      "types"
    ],
    "types": [
      "jasmine",
      "react-tether",
      "webpack-env"
    ]
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.*"
  ]
}
