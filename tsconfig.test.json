{
  "compilerOptions": {
    "removeComments": true,
    "target": "ES5",
    "module": "commonjs",
    "noImplicitAny": true,
    "noEmitOnError": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "jsx": "react",
    "typeRoots": [
      "types"
    ],
    "types": [
      "react-tether",
      "jasmine"
    ]
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.*"
  ]
}
